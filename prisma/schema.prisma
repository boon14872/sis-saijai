generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id       Int    @id @default(autoincrement())
  nickName String
}

model Employee {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  phoneNumber String
  position    String
  hireDate    DateTime
  salary      Int
}

model Products {
  id            Int      @id @default(autoincrement())
  productName   String
  category      String   // หมวดหมู่ coffee, tea, smoothie, bakery
  price         Int      // price in บาท
  image         Bytes    // image stored as binary data
}
