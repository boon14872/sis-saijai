datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model MenuItem {
    id     Int         @id @default(autoincrement())
    name   String
    price  Float
    orders OrderItem[]
}

model Customer {
    id       Int    @id @default(autoincrement())
    nickName String
}

model Employee {
    id          Int      @id @default(autoincrement())
    firstName   String
    lastName    String
    email       String
    phoneNumber String
    position    String
    hireDate    DateTime
    salary      Float
}

model Order {
    id        Int         @id @default(autoincrement())
    total     Float
    orderTime DateTime    @default(now())
    items     OrderItem[]
}

model OrderItem {
    id         Int      @id @default(autoincrement())
    quantity   Int
    orderId    Int
    menuItemId Int
    order      Order    @relation(fields: [orderId], references: [id])
    menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
}

model Payment {
    id            Int      @id @default(autoincrement())
    orderId       Int
    paymentDate   DateTime
    paymentAmount Float
    paymentMethod String
}

