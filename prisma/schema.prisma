generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id       Int    @id @default(autoincrement())
  nickName String
}

model Employee {
  id          Int     @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String
  phoneNumber String
  position    String
  hireDate    DateTime
  salary      Float
}

